include module

- if(LANG == undefined) LANG = locals.locale;

doctype html
html
	head
		link(rel='canonical' href='.')
		link(rel='stylesheet', href='https://cdn.alphakkutu.me/css/in_game_kkutu.css?v='+L('version'))
		block Subject
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		script(type='text/javascript').
			function getObject(v, i){
				Object.defineProperty(v, i, { value: v[i], writable: false });
			}
			getObject(window.WebSocket, "send");
			getObject(window.WebSocket, "onmessage");
			getObject(window, "WebSocket");
		script(async='', src='https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
		script.
			(adsbygoogle = window.adsbygoogle || []).push({
			google_ad_client: "ca-pub-7809351121829453",
			enable_page_level_ads: true
			});
		script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-148914539-1')
		script.
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'UA-148914539-1');
		block Search
			meta(name='description', content=LANG['meta_desc'] || L('META_DESC'))
			meta(name='keywords', content=LANG['meta_keys'] || L('META_KEYS'))
		
		block OpenGraph
			meta(property='og:image', content=locals.ogImage || L('OG_IMAGE'))
			meta(property='og:url', content=locals.ogURL || L('OG_URL'))
			meta(property='og:title', content=locals.ogTitle || L('OG_TITLE'))
			meta(property='og:description', content=locals.ogDescription || L('OG_DESC'))
		
		+PageHead()
			block Preload
		block CSS
		block JS
	
	body(style='min-width: 640px;')
		div#Top
			+Menu()
			div#global-notice
				div#gn-content
					.
						2019년 한글날 이벤트 진행! 자세한 사항은 게임 내 《공지사항》을 클릭하여 확인해 주세요. <a id="click-here-to-close">[닫기]</a>
					//알파끄투를 홍보해주세요! 홍보 게시물 등을 작성하고 <a id="click-here-to-learnmore" href="https://cafe.naver.com/kkutuevent/12" target="_blank">카페</a> 또는 <a id="click-here-to-learnmore" href="https://discord.gg/tDZrRN2" target="_blank">디스코드 서버</a>에 남겨주시면 개당 1000핑을 지급해 드립니다. <a id="click-here-to-close">[닫기]</a>
			block Top
		div#Jungle
			span#mobile= locals.mobile
			span#summonerID= DATA._id
			#Background
			block Jungle
		div#Middle
			block Middle
		div#Bottom
			+separator(10)
			block Bottom
			+separator(10)