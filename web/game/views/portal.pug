		iframe#kkutu-bulletin(width='100%', height='190px', src='/docs/bulletin.html')
	div(style='float: right; width: calc(40% - 11.5px); background-color: #EEE;')
		div#btl <i class="fas fa-info-circle" style="margin-left:5px;padding-top:2px;"></i> 공지사항
		iframe#kkutu-bulletin(width='100%', height='190px', src='/docs/notice.html')
	table.tg(style='border-collapse:collapse;border-spacing:0;border-color:#bbb;float:left;width:447px;height:65px;margin-left:15px;margin-top:5px;')
		tbody
			tr
				th#info.bold 제명
				th#info 알파끄투
				th#info.bold 신청자
				th#info 김도훈
			tr
				td#info.bold 이용등급
