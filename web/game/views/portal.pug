			h3#holder(style='padding-top:30px;')= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='https://cdn.kkutu.xyz/img/kkutu/short_logo.png', title='끄투닷넷 로고 - 끄투 온라인')
		button#game-start.jjo-display(style='float:left;') 게임 시작
	div#container-slides(style='float: left; background-color: #ccc; display: inline-block; width: 60%; margin-left: 15px;')
		img.slide.showing(src='https://cdn.kkutu.xyz/img/kkutu/intro.png', title='BANNER (1)')
		img.slide(src='https://cdn.kkutu.xyz/img/kkutu/intro.png', title='BANNER (2)')
	script.
		var slides = document.querySelectorAll('#container-slides .slide');
		var currentSlide = 0;
		var slideInterval = setInterval(nextSlide, 5000);
		function nextSlide() {
			slides[currentSlide].className = 'slide';
			currentSlide = (currentSlide+1)%slides.length;
			slides[currentSlide].className = 'slide showing';
		}
	div#container-black(style='float: right; background-color: #ccc; display: inline-block; width: 795px; height: 226px;')
		div#container-social(style='float: right; background-color: #004c5c; width: 189px; height: 226px;')
