			a#social(href='https://discord.gg/rnCSBWj' target='_blank') <i class="fab fa-discord fa-fw"></i> 디스코드
			a#social(href='https://fb.me/KKuTuDotNet' target='_blank') <i class="fab fa-facebook fa-fw"></i> 페이스북
			a#social(href='https://pf.kakao.com/_gxcsxeT' target='_blank') <i class="fas fa-sms fa-fw"></i> 카카오톡
			a#social(href='https://kkutu.wiki' target='_blank') <i class="fab fa-wikipedia-w fa-fw"></i> 위키닷넷
	+separator(5)
	div(style='float: left;')
		div.server-list-box
			h3.server-list-title(style='height:20px;')
